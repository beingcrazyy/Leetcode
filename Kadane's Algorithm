class Solution{
  public:
    
    long long max(long long a , long long b){
        long long max;
        if(a>=b){
            max = a;
        }
        else{
            max = b;
        }
        return max;
    }
    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long long maxSubarraySum(int arr[], int n){
        
        int maxsum = arr[0];
        int sum = 0;
        for(int i = 0 ; i < n ; i++){
            sum = max(arr[i],sum+arr[i]);
            maxsum= max(sum , maxsum);
        }
        return maxsum;
    }
};
